<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/text_title"
            android:text="程序锁"/>
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_unlock"
                android:textColor="#ffffff"
                android:background="@drawable/tab_left_pressed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未加锁"
                android:gravity="center" />
            <TextView
                android:id="@+id/tv_locked"
                android:textColor="#ffffff"
                android:background="@drawable/tab_right_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已加锁"
                android:gravity="center"/>
        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_unlock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_unlock_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未加锁xx个"/>
            <ListView
                android:id="@+id/lv_unlock_items"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_locked"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_locked_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已加锁xx个"/>
            <ListView
                android:id="@+id/lv_locked_items"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>

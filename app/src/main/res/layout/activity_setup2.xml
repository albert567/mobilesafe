<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/text_title"
        android:text="2.手机卡绑定"/>

    <TextView
        android:text="通过绑定手机卡:\n下次重启手机如果发现SIM卡变化,就会\n发送报警短信"
        style="@style/text_content"/>
    <RelativeLayout
        android:id="@+id/rl_setup2_bind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/dg_cancel_selector">
        <TextView
            style="@style/text_content"
            android:layout_centerVertical="true"
            android:text="点击绑定/解绑SIM卡"/>
        <ImageView
            android:id="@+id/iv_setup2_status"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/unlock"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bind"
            android:layout_centerInParent="true"/>
        <Button
            style="@style/button_next"
            android:onClick="showNext"/>
        <Button
            style="@style/button_pre"
            android:onClick="showPre"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/presence_invisible"/>
            <ImageView
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/presence_online"/>
            <ImageView
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/presence_invisible"/>
            <ImageView
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/presence_invisible"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
